<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="대기실화면"
                android:textSize="60sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/room1Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="1번방" />

                    <Button
                        android:id="@+id/room2Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="2번방" />

                    <Button
                        android:id="@+id/room3Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="3번방" />

                    <Button
                        android:id="@+id/room4Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="4번방" />

                    <Button
                        android:id="@+id/room5Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="5번방" />

                    <Button
                        android:id="@+id/room6Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="6번방" />

                    <Button
                        android:id="@+id/room7Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="7번방" />

                    <Button
                        android:id="@+id/room8Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="8번방" />

                    <Button
                        android:id="@+id/room9Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="9번방" />

                    <Button
                        android:id="@+id/room10Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="10번방" />

                    <Button
                        android:id="@+id/room11Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="11번방" />

                    <Button
                        android:id="@+id/room12Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="12번방" />

                    <Button
                        android:id="@+id/room13Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="13번방" />

                    <Button
                        android:id="@+id/room14Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="14번방" />

                    <Button
                        android:id="@+id/room15Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="15번방" />

                    <Button
                        android:id="@+id/room16Button"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="16번방" />

                </LinearLayout>


            </ScrollView>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="17"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/searchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="86dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonccc"
                    android:text="Search"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/friendButton"
                    android:layout_width="wrap_content"
                    android:layout_height="86dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonccc"
                    android:text="friend"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/systemButton"
                    android:layout_width="wrap_content"
                    android:layout_height="86dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonccc"
                    android:text="System"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/offButton"
                    android:layout_width="wrap_content"
                    android:layout_height="86dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonccc"
                    android:text="OFF"
                    android:textSize="20dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/neo" />

            <TextView
                android:id="@+id/IDtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="clip_vertical|center_horizontal"
                android:hint="아이디"
                android:textSize="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/abcd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <Button
                        android:id="@+id/createButton"
                        android:layout_width="300dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="100dp"
                        android:background="@drawable/buttonbbb"
                        android:text="방만들기"
                        android:textSize="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <Button
                        android:id="@+id/enterbutton"
                        android:layout_width="300dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="100dp"
                        android:background="@drawable/buttonaaa"
                        android:text="빠른입장"
                        android:textSize="30dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>